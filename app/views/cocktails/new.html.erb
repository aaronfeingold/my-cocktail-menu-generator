<%= form_for(@cocktail) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div><br>
  <div>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </div><br>
  <div>
    <%= f.label :alcohol %>
    <%= f.text_area :alcohol %>
  </div><br>
  <div>
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients %>
  </div><br>
  <%= f.submit %>
<% end %>